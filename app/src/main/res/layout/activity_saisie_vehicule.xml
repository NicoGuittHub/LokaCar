<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vehicule.SaisieVehicule">

    <TextView
        android:id="@+id/saisieVehicule"
        android:layout_width="159dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:hint="Saisie d'un véhicule"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="valideVehicule"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintVertical_bias="1.0" />

    <ToggleButton
        android:id="@+id/location"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:checked="false"
        android:text="Loué"
        android:textOff="disponible"
        android:textOn="loué"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="363dp" />

    <EditText
        android:id="@+id/immatriculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="immatriculation"
        app:layout_constraintTop_toBottomOf="@+id/saisieVehicule"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/marque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="marque"
        app:layout_constraintTop_toBottomOf="@+id/immatriculation"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/modele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="modèle"
        app:layout_constraintTop_toBottomOf="@+id/marque"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="€"
        app:layout_constraintTop_toBottomOf="@+id/modele"
        tools:layout_editor_absoluteX="29dp" />

    <Button
        android:id="@+id/buttonPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Photo"
        android:onClick="prendrePhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prix" />


</android.support.constraint.ConstraintLayout>